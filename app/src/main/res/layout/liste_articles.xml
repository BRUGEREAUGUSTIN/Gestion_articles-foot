<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMessageListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif"
        android:text="@string/ListeArticles"
        android:textColor="@color/titre"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewListeArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:text="@string/ListeArticles"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/ListeViewArticles"
        app:layout_constraintEnd_toEndOf="@+id/ListeViewArticles"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMessageListe"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/ListeViewArticles"
        android:layout_width="340dp"
        android:layout_height="402dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="175dp" />

    <Button
        android:id="@+id/buttonRetour"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/boutonRetour"
        app:layout_constraintEnd_toEndOf="@+id/ListeViewArticles"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/ListeViewArticles"
        app:layout_constraintTop_toBottomOf="@+id/ListeViewArticles" />

</androidx.constraintlayout.widget.ConstraintLayout>